{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Poly",
  "scopeName": "source.poly",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#functions" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#variables" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.poly",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.triple.poly",
          "begin": "\"\"\"",
          "end": "\"\"\"",
          "patterns": [
            {
              "name": "constant.character.escape.poly",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.double.poly",
          "begin": "f\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.poly",
              "match": "\\\\."
            },
            {
              "name": "meta.interpolation.poly",
              "begin": "\\{",
              "end": "\\}",
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        },
        {
          "name": "string.quoted.double.poly",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.poly",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.poly",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.poly",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.poly",
          "match": "\\b(if|else|elif|for|while|break|continue|return|match|case|try|except|finally|with|pass)\\b"
        },
        {
          "name": "keyword.declaration.poly",
          "match": "\\b(fn|let|const|class|import|from|as|export)\\b"
        },
        {
          "name": "keyword.operator.logical.poly",
          "match": "\\b(and|or|not|in|is)\\b"
        },
        {
          "name": "constant.language.poly",
          "match": "\\b(true|false|none|null|True|False|None)\\b"
        },
        {
          "name": "variable.language.poly",
          "match": "\\b(self|this)\\b"
        },
        {
          "name": "storage.type.poly",
          "match": "\\b(int|float|str|bool|list|dict|any)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.poly",
          "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "keyword.declaration.poly" },
            "2": { "name": "entity.name.function.poly" }
          }
        },
        {
          "name": "support.function.builtin.poly",
          "match": "\\b(print|len|range|type|str|int|float|list|dict|input|open|read_file|write_file|append|push|pop|keys|values|items|join|split|replace|strip|upper|lower|html|router|store|component)\\b"
        },
        {
          "name": "meta.function-call.poly",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\(",
          "captures": {
            "1": { "name": "entity.name.function.poly" }
          }
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.poly",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.hex.poly",
          "match": "\\b0x[0-9a-fA-F]+\\b"
        },
        {
          "name": "constant.numeric.integer.poly",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.poly",
          "match": "=|\\+=|-=|\\*=|/=|%=|\\|\\|=|&&="
        },
        {
          "name": "keyword.operator.comparison.poly",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.arithmetic.poly",
          "match": "\\+|-|\\*|/|%|\\*\\*"
        },
        {
          "name": "keyword.operator.logical.poly",
          "match": "\\|\\||&&|!"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.poly",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}
